# Core Django
SECRET_KEY=replace-with-a-strong-random-secret
# Alternative accepted names:
# DJANGO_SECRET_KEY=replace-with-a-strong-random-secret
# RAILWAY_SECRET_KEY=replace-with-a-strong-random-secret
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,testserver
CSRF_TRUSTED_ORIGINS=
SITE_URL=https://your-domain.com
RAILWAY_PUBLIC_DOMAIN=

# Database (Railway Postgres or any managed Postgres)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Gunicorn tuning (optional)
WEB_CONCURRENCY=2
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=120

# Payments (Paystack)
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_BASE_URL=https://api.paystack.co
PAYSTACK_CALLBACK_URL=

# Email (SMTP)
DEFAULT_FROM_EMAIL=no-reply@poshpearl.com
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_ALLOW_INSECURE_SSL=False
ACCOUNT_EMAIL_VERIFICATION=optional

# Optional media storage (S3-compatible)
AWS_STORAGE_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_REGION_NAME=
AWS_S3_ENDPOINT_URL=
AWS_S3_CUSTOM_DOMAIN=

# Optional observability
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
